{
  "name": "messenger",
  "version": "1.0.0",
  "description": "Messenger",
  "engines": {
    "node": "14.17.0",
    "npm": "6.14.13"
  },
  "scripts": {
    "lint:ts": "npx eslint . --ext .ts",
    "lint:css": "npx stylelint \"**/*.scss\"",
    "check:lint": "npm run lint:ts && npm run lint:css",
    "check:test": "mocha --require ts-node/register --require ./mochaSetup.js './src/**/*.test.ts'",
    "check": "npm run check:lint && npm run check:test",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production --node-env=production",
    "start": "npm run build:prod && node ./server.ts",
    "watch": "webpack --watch",
    "serve": "webpack serve"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlexAtrepyev/middle.messenger.praktikum.yandex.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AlexAtrepyev/middle.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/AlexAtrepyev/middle.messenger.praktikum.yandex#readme",
  "devDependencies": {
    "@types/chai": "4.3.3",
    "@types/jsdom": "20.0.0",
    "@types/mocha": "10.0.0",
    "@types/node": "18.7.14",
    "@types/sinon": "10.0.13",
    "@typescript-eslint/eslint-plugin": "5.36.2",
    "@typescript-eslint/parser": "5.36.2",
    "@webpack-cli/generators": "2.5.0",
    "chai": "4.3.6",
    "css-loader": "6.7.1",
    "eslint": "8.22.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-react": "7.31.7",
    "html-webpack-plugin": "5.5.0",
    "husky": "4.3.8",
    "jsdom": "20.0.1",
    "mocha": "10.0.0",
    "parcel": "2.7.0",
    "sass": "1.55.0",
    "sass-loader": "13.1.0",
    "sinon": "14.0.1",
    "style-loader": "3.3.1",
    "stylelint": "14.11.0",
    "stylelint-config-standard": "28.0.0",
    "stylelint-config-standard-scss": "5.0.0",
    "ts-loader": "9.4.1",
    "ts-node": "10.9.1",
    "typescript": "4.8.2",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.11.1"
  },
  "dependencies": {
    "express": "4.18.1",
    "express-history-api-fallback": "2.2.1"
  }
}
